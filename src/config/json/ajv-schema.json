{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "sources": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "filename": {
                        "type": "string"
                    },
                    "transformation": {
                        "type": "array",
                        "minItems": 16,
                        "items": {
                            "type": "string",
                            "pattern": "ok|drop|insert-zero"
                        }
                    },
                    "schema": {
                        "type": "array",
                        "minItems": 16,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["filename"]
            }
        },
        "derivativeMultipliers": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "matcher": {
                        "type": "string"
                    },
                    "multiplier": {
                        "type": "number"
                    }
                },
                "required": ["matcher", "multiplier"]
            }
        },
        "mtmPrices": {
            "type": "object",
            "additionalProperties": {
                "type": "number"
            }
        }
    },
    "required": ["sources", "derivativeMultipliers", "mtmPrices"]
}
